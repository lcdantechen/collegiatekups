{{# if orders }}
<div class="container">

  <div class="row content">
    <div class="col-md-10 col-md-offset-1">

        <h2>View your order history</h2>
        <p>Savor your college days daily</p>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Address</th>
              <th>Order Items</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
           {{#each orders}}
              <td><img style="max-height:40px;" src="{{this.item.imagePath}}"/></td>
              <td style="text-align:left;">{{this.name}}</td>
              <td>${{this.address}}</td>
              <td>
		              {{#each this.cart.items}}
		                <span class="badge">{{this.qty}}</span>		                <img style="max-width:60px;" src="{{this.item.imagePath}}">&nbsp;&nbsp;&nbsp;
		               
		              {{/each}}
              </td>
              <td>${{this.cart.plusShipping}}</td>
              
          
            </tr>
           {{/each}}  
          </tbody>
        </table>
        
    </div>
  </div>

